<h1>Eating Burgers</h1>
<div class="container-fluid col-md-12 m-2"></div>
  <div class="row">
     <div class="col-md-6">
         <ul>
             {{#each burgers}}
             {{#unless eaten}}
             <li class="burger-li pb-2">
                 {{name}}
                 <button class="btn btn-primary bugerBtn" burger-id="{{id}}" type="button">Devour it!</button>
             </li>
             {{/unless}}
             {{/each}}
         </ul>
      </div>

    <div class="col-md-6">
        <ul class="bL">
            {{#each burgers}}
            {{#if eaten}}
            <li class="bList">
                {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
         </ul>
     </div>
  </div>
 </div>

 <h2>Add a Burger</h2>

   <form id="addBurgerForm" class="m-2">
      <textarea type="text" id="addBurger"></textarea>
      <button class="btn btn-primary" id="addBurgerBtn" type="button">Add Burger</button>
   </form>
</div>


